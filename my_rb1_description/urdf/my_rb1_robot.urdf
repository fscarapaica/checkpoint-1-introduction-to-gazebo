<?xml version="1.0" ?>

<robot name="robot">

    <!-- Base -->
        <!-- Base footprint -->
        <link name="base_footprint">
        </link>

        <!-- Link - base -->
        <link name="base_link">
            <inertial>
                <mass value="23" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="0.5319" iyy="0.5319" izz="0.7188" ixy="0" ixz="0" iyz="0" />
            </inertial>

            <collision>
                <geometry>
                    <cylinder length="0.3" radius="0.25"/>
                </geometry>
            </collision>

            <visual>
                <geometry>    
                    <cylinder length="0.3" radius="0.25"/>
                </geometry>
                <material name="Yellow">
                    <color rgba="1 1 0 1" />
                </material>
            </visual>
        </link>

        <!-- Joint - base - base footprint -->
        <joint name="joint_base_to_base_footprint" type="fixed">
            <origin rpy="0 0 0" xyz="0 0 0.15" />
            <parent link="base_footprint" />
            <child link="base_link" />
        </joint>

    <!-- Wheels -->
        <!-- Link - left wheel -->
        <link name="left_wheel">
            <inertial>
                <mass value="1" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="0.0001896" iyy="0.0001896" izz="0.0003125" ixy="0" ixz="0" iyz="0" />
            </inertial>

            <collision>
                <origin rpy="1.57079633 0 0" xyz="0 0 0" />
                <geometry>
                    <cylinder length="0.02" radius="0.025"/>
                </geometry>
            </collision>
            <visual>
                <origin rpy="1.57079633 0 0" xyz="0 0 0" />
                <geometry>
                    <cylinder length="0.02" radius="0.025"/>
                </geometry>
            </visual>
        </link>

        <!-- Joint - left wheel to base -->
        <joint name="joint_left_wheel_to_base" type="continuous">
            <origin rpy="0 0 0" xyz="0 -0.2 -0.15" />
            <parent link="base_link" />
            <child link="left_wheel" />
            <axis rpy="0 0 0" xyz="0 1 0" />
            <limit effort="10000" velocity="1000" />
            <joint_properties damping="1.0" friction="1.0" />
        </joint>

        <!-- Link - right wheel -->
        <link name="right_wheel">
            <inertial>
                <mass value="1" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="0.0001896" iyy="0.0001896" izz="0.0003125" ixy="0" ixz="0" iyz="0" />
            </inertial>

            <collision>
                <origin rpy="1.57079633 0 0" xyz="0 0 0" />
                <geometry>
                    <cylinder length="0.02" radius="0.025"/>
                </geometry>
            </collision>
            <visual>
                <origin rpy="1.57079633 0 0" xyz="0 0 0" />
                <geometry>
                    <cylinder length="0.02" radius="0.025"/>
                </geometry>
            </visual>
        </link>

        <!-- Joint - right wheel - base -->
        <joint name="joint_right_wheel_to_base" type="continuous">
            <origin rpy="0 0 0" xyz="0 0.2 -0.15" />
            <child link="right_wheel" />
            <parent link="base_link" />
            <axis rpy="0 0 0" xyz="0 1 0" />
            <limit effort="10000" velocity="1000" />
            <joint_properties damping="1.0" friction="1.0" />
        </joint>

    <!-- Caster wheels -->
        <!-- Link - front caster wheel -->
        <link name="front_caster">
            <inertial>
                <mass value="1" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="0.00026667" ixy="0.00026667" izz="0.00026667" ixz="0" iyy="0.002526666666667" iyz="0" />
            </inertial>

            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <sphere radius="0.02"/>
                </geometry>
            </collision>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <sphere radius="0.02"/>
                </geometry>
            </visual>

            <collision>
                <origin rpy="0 0 0" xyz="0 0 -0.015" />
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
            </collision>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 -0.015" />
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
            </visual>
        </link>

        <!-- Joint - front caster to base -->
        <joint name="joint_front_caster_to_base" type="fixed">
            <origin rpy="0 0 0" xyz="0.1 0 -0.15" />
            <child link="front_caster" />
            <parent link="base_link" />
        </joint>

        <!-- Link - back caster wheel -->
        <link name="back_caster">
            <inertial>
                <mass value="1" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="0.00026667" ixy="0.00026667" izz="0.00026667" ixz="0" iyy="0.002526666666667" iyz="0" />
            </inertial>

            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <sphere radius="0.02"/>
                </geometry>
            </collision>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <sphere radius="0.02"/>
                </geometry>
            </visual>

            <collision>
                <origin rpy="0 0 0" xyz="0 0 -0.015" />
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
            </collision>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 -0.015" />
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
            </visual>
        </link>

        <!-- Joint - back caster - base -->
        <joint name="joint_back_caster_to_base" type="fixed">
            <origin rpy="0 0 0" xyz="-0.1 0 -0.15" />
            <child link="back_caster" />
            <parent link="base_link" />
        </joint>

    <!-- Sensors -->
            <!-- Link - front laser -->
        <link name="front_laser">
        </link>

        <!-- Joint - front laser - base -->
        <joint name="joint_front_laser_to_base" type="fixed">
            <origin rpy="3.14159 0 0" xyz="0.25 0 0.075" />
            <child link="front_laser" />
            <parent link="base_link" />
        </joint>
        
    <!-- Gazebo tags -->
        <gazebo reference="link_front_caster">
            <mu1>0</mu1>
            <mu2>0</mu2>
        </gazebo>

        <gazebo reference="link_back_caster">
            <mu1>0</mu1>
            <mu2>0</mu2>
        </gazebo>
</robot>